{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "oer-utils": ["packages/oer-utils/src"],
      "ilp-packet": ["packages/ilp-packet/src"],
      "ilp-logger": ["packages/ilp-logger/src"],
      "ilp-protocol-ccp": ["packages/ilp-protocol-ccp/src"],
      "ilp-protocol-ildcp": ["packages/ilp-protocol-ildcp/src"],
      "ilp-protocol-stream": ["packages/ilp-protocol-ccp/src"],
      "ilp-plugin": ["packages/ilp-plugin/src"],
      "ilp-spsp-payout": ["packages/ilp-spsp-payout/src"],
      "@interledger/connection-tag-utils": ["packages/connection-tag-utils/src"],
      "@interledger/stream-receiver": ["packages/stream-receiver/src"],
      "@interledger/pay": ["packages/pay/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
